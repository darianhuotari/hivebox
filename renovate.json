{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "addLabels": [
    "renovatebot"
  ],
  "packageRules": [
    {
      "matchLanguages": [
        "python"
      ],
      "addLabels": [
        "python-dependencies"
      ]
    },
    {
      "datasources": [
        "docker"
      ],
      "addLabels": [
        "docker-dependency"
      ]
    }
  ],
  "timezone": "America/Chicago",
  "schedule": [
    "* * * * *"
  ],
  "prHourlyLimit": 10
}